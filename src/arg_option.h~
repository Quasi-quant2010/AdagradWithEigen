#ifndef __OPTION__H__
#define __OPTION__H__

using namespace std;

typedef struct _command_args{
  char* train;
  char* test;
  char* out;
  double lambda;
  double step_size;
  double epsilon;
  double clip_threshold;
  char* clip_method;
  unsigned int max_iteration;
  unsigned int mini_batch;
} command_args;

typedef struct _model_args{
  char* corpus;
  char* word2id;
  double beta;
  double concentration_par;
  unsigned int seed;
  unsigned int top_k;
  unsigned int k;
  unsigned int iteration;
  unsigned int smartinit;
  double convergence;
  unsigned int core;
} model_args;

void read_args(int, char**, command_args*);

#endif //__OPTION__H__
